@{
    ViewData["Title"] = "Home Page";
}

<!--Login-->
<main class="container main-content mx-auto">
    <div class="d-flex justify-content-center align-items-center">
        <div class="row">
            <div class="col-sm-12 mb-3 ml-3 mb-sm-0">

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <h1>@Model.ErrorMessage</h1>
                }

                <form method="post" asp-controller="Account" asp-action="Login">
                    <div class="mb-6">
                        <label for="InputEmail1" class="form-label">Email address</label>
                        <input type="email" name="InputEmail" class="form-control" id="InputEmail" aria-describedby="emailHelp" required>
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                        <label for="InputPassword" class="form-label">Password</label>
                        <input type="password" name="InputPassword" class="form-control" id="InputPassword" required>
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, or emoji.
                        </div>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="Check1">
                        <label class="form-check-label" for="Check1">Remember me</label>
                    </div>
                    <p>
                        <a asp-area="" asp-controller="Account" asp-action="CreateAccount">Create a new account</a>
                    </p>
                    <button type="submit" class="btn btn-primary">Submit</button>

                </form>
            </div>
        </div>
    </div>
</main>